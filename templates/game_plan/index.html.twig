{% extends 'base.html.twig' %}

{% block title %}Spielrundenergebnisse{% endblock %}

{% block javascripts %}<script src="extensions/editable/bootstrap-table-editable.js"></script>{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('beef') }}">Beefs</a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('game_list', {'year': '2019'}) }}">Spiele</a></li>
            <li class="breadcrumb-item active" aria-current="page">Runden</li>
        </ol>
    </nav>
    <h1 class="text-primary">{{ game }}</h1>

    <form>
        {% if gamerPerField == 1 %}
            {% for i in 0..2 %}
                {{ include('round.html.twig') }}
            {% endfor %}
        {% else %}
            {%  set i = 0 %}
            {{ include('round.html.twig') }}
        {% endif %}
        <button type="submit" class="btn btn-primary mb-5">Submit</button>
    </form>

{{ include('score.html.twig') }}
{% endblock %}
